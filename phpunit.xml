<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
		<testsuite name="Matrix Tests">
			<file>./tests/MatrixTest.php</file>
		</testsuite>
		<testsuite name="Vector Tests">
			<file>./tests/VectorTest.php</file>
		</testsuite>
        <testsuite name="LSI Tests">
			<file>./tests/LSITest.php</file>
        </testsuite>
    </testsuites>
</phpunit>
